<!DOCTYPE html>
<html lang="fr">
  <head>
    <% include partials/head %>
  </head>

  <body>
		<div class="truc"></div>
    <div class="page">
      <header>
        <% include partials/header %>
        <script type="text/javascript" src="/js/search.js"></script>
				<script type="text/javascript" src="/js/button_up.js"></script>
				<script type="text/javascript" src="/js/main.js"></script>
      </header>
      <main>
        <div class="col-sm-12">
	        <form id="search_form" class="searchform col-sm-12" onsubmit="return false;">
		        <div class="center_div_search form-group input-group col-sm-6">
                    <input autofocus class='form-control' id="search_input" type="text" name="name" value="" placeholder="Hobbit" class="form-control">
		        	<div class="input-group-btn">
			            <input type="submit" class="btn btn-default" onclick="update_list(this)" name="submit" value="Search">
			        </div>
		        </div>

					<div class="center_div">
		        <div class="form-group col-sm-3">
			        <label class="color-blue" for="sortBy">Sort by : </label>
			        <select class="form-control" onchange=update_list(this) name="sortBy" id="sortBy">
								<option value="download_count">Downloads</option>
								<option value="date_added">Novelty</option>
				        <option value="title">Name</option>
				        <option value="year">Release date</option>
								<option value="rating">Rating</option>
			        </select>
		        </div>

	        	<div class="form-group col-sm-3">
			        <label class="color-blue" for="order">Order by : </label>
		        	<select class="form-control" onchange=update_list(this) name="order" id="order">
				        <option value="desc">Descending</option>
				        <option value="asc">Ascending</option>
			        </select>
		        </div>

						<div class="form-group col-sm-3">
			        <label class="color-blue">Kind : </label>
		        	<select id="select_kind" onchange=update_list(this) class="form-control" name="browsers">
				        <option value="">All</option>
								<option value="Action">Action</option>
				        <option value="Adventure">Adventure</option>
				        <option value="Animation">Animation</option>
				        <option value="Biography">Biography</option>
				        <option value="Comedy">Comedy</option>
				        <option value="Crime">Crime</option>
				        <option value="Documentary">Documentary</option>
				        <option value="Drama">Drama</option>
				        <option value="Family">Family</option>
				        <option value="Fantasy">Fantasy</option>
				        <option value="Film-Noir">Film-Noir</option>
				        <option value="History">History</option>
				        <option value="Horror">Horror</option>
				        <option value="Music">Music</option>
				        <option value="Musical">Musical</option>
				        <option value="Mystery">Mystery</option>
				        <option value="Romance">Romance</option>
				        <option value="Sci-Fi">Sci-Fi</option>
				        <option value="Sport">Sport</option>
				        <option value="Thriller">Thriller</option>
				        <option value="War">War</option>
				        <option value="Western">Western</option>
			        </select>
		        </div>
					</div>

