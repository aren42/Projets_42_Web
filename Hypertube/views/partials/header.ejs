 <!-- views/partials/header.ejs -->
 
      <div class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <button style="border-color: rgba(64, 64, 64, 0.8) !important;" type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu" aria-expanded="false" id="button_toggle">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a href="/"><img src="/images/logo.png" alt="Icone du menu" id="logo"></a>
          </div>
          <div class="collapse navbar-collapse" id="menu">
            <ul class="nav navbar-nav">
							<% if (!connected) { %>
              	<li><button type="button" class="click" data-toggle="modal" data-target="#Signin">SIGNIN</button></li>
              	<li><button type="button" class="click" data-toggle="modal" data-target="#Signup">SIGNUP</button></li>
							<% } else { %>
				        <input id="ID_user" value="<%=user.id%>" hidden>
								<li><a href="/" class="click">Search</a></li>
								<li class="dropdown" id="Header">
									<a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <% if (!user.email) { %>
                      <%= user.login %>
                    <% } else { %>
                  	  <%= user.email %>
                    <% } %>
                  	<b class="caret"></b>
									</a>
									<ul class="dropdown-menu">
                  	<li><a href="/user/<%= user.id %>" style="color: white;">- My profil</a></li>
                  	<li><a href="/auth/logout" style="color: white;">- Log out</a></li>
                	</ul>
								</li>
                <% if (!user.picture) { %>
								  <li><div class="user-profile-picture visible-sidebars" style="background-image: url(https://www.super-parrain.com/images/users/anonyme2-58cc0d02d73a835b893cbfa46625d978.jpeg)"></div></li>
                <% } else { %>
                  <li><div class="user-profile-picture visible-sidebars" style="background-image: url(<%= user.picture %>)"></div></li>
                <% } %>
							<% } %>
            </ul>
          </div>
        </div>
      </div>
      <div id="message" class="notification">
      </div>

      <% include ../user/signin %>
      <% include ../user/signup %>
      <% include ../user/forget_password.ejs %>
